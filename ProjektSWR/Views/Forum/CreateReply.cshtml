@model ProjektSWR.Models.Reply
@{
    ViewBag.Title = "CreateReply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CreateReply", "Forum", FormMethod.Post, new { th = Model.ThreadID.ID }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Dodawanie odpowiedzi</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Odpowiedź", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Hidden("th", Model.ThreadID.ID)
                @Html.Hidden("Email", Model.Email)
                @Html.TextBoxFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" }, style = "width:1200px" })
                @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}
