@model ProjektSWR.Models.Thread
@{
    ViewBag.Title = "CreateThread";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CreateThread", "Forum", FormMethod.Post, new { th = Model.CategoryID.ID }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Tworzenie nowego wątku</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Nazwa wątku", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Hidden("th", Model.CategoryID)
                @Html.Hidden("UserId", Model.UserID)
                @Html.Hidden("Email", Model.Email)
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Treść wątku", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MainMessage, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MainMessage, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}