@model ProjektSWR.Models.ManageViewModel

<center><h1>@ViewBag.Message</h1></center>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    <div id="mainbeam">
        <h3>Dane osobowe:</h3>
    </div>

    <div id="space">
        <div id="pool">
            <p>
                <div id="text">Imię:</div>
                <div id="textfield">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text">Nazwisko:</div>
                <div id="textfield">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text">Nr telefonu:</div>
                <div id="textfield">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text">E-mail:</div>
                <div id="textfield">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text">St. naukowy:</div>
                <div id="textfield">
                    @Html.DropDownListFor(m => m.AcademicDegree, new SelectList(Model.AcademicDegreeOptions, "Value", "Value"), new { @class = "form-control" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text">Katedra:</div>
                <div id="textfield">
                    @Html.DropDownListFor(m => m.CathedralName, new SelectList(Model.Cathedrals, "Department", "Department"), new { @class = "form-control" })
                </div>
            </p>
        </div>
        <div id="buttons">
            <p>
                <input type="submit" name="submitButton" value="Zatwierdź" class="btn btn-default" />
                <input type="submit" name="submitButton" value="Anuluj" class="btn btn-default" />

            </p>
        </div>
    </div>

    <div id="mainbeam">
        <h3>Dane osobowe (opcjonalnie):</h3>
    </div>
    <div id="space">
        <div id="pool">
            <p>
                <div id="text">Opis:</div>
                <div id="textfield">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text">Data urodzenia:</div>
                <div id="textfield">
                    @Html.EditorFor(model => model.DateOfBirth, "{0:dd/MM/yyyy}", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text">URL: </div>
                <div id="textfield">
                    @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                </div>
            </p>
        </div>
        <div id="pool">
            <p>
                <div id="text" style="padding-bottom: 5px">Zdjęcie:</div>
                <div id="photo" style="float: left;">
                    @if (Model.Photo != null)
                    {
                    <img src="@Url.Content(Model.Photo)" alt=""
                         height="144" width="99" />
                    }
                    else
                    {
                        <img src="https://www.ohio.edu/medicine/manage/images/No-Photo_5.jpg" alt=""
                             height="144" width="99" />
                    }
                </div>
                <div style="clear: both; padding-left: 125px; padding-top: 4px; float: left;" />
            </p>
        </div>
        <div id="buttons">
            <p>
                <input type="submit" name="submitOptional" value="Zatwierdź" class="btn btn-default" />
                <input type="submit" name="submitOptional" value="Anuluj" class="btn btn-default" />
            </p>
        </div>
    </div>
    <div id="mainbeam">
        <h3>Zmiana hasła:</h3>
    </div>
    <div id="space">
        <div id="text" style="float:right; clear: both; width: auto; padding-top:0px;"> [ @Html.RouteLink("Przejdź do swojego profilu", "ProfileById", new { id = Model.ID }) ]</div>
        <dl class="dl-horizontal">
            <dt>Hasło:</dt>
            <dd>
                [
                @Html.ActionLink("Zmień hasło", "ChangePassword")
                ]
            </dd>
        </dl> 
    </div>
}

@section Scripts{
    @Styles.Render("~/Content/UPPS/one.css")
}