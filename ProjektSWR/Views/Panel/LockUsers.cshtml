@model ProjektSWR.Models.ManageUsersModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Zablokuj";
}
<script src="~/Scripts/Panel/manage.js"></script>
<script src="~/Scripts/Panel/show.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/Panel.css" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="dropdown">
            <button class="dropbtn">Użytkownicy</button>
            <div class="dropdown-content">
                <a href="~/Panel/ManageUsers">Edytuj</a>
                <a href="~/Panel/LockUsers">Blokuj</a>
                <a href="~/Panel/UnlockUsers">Odblokuj</a>
                <a href="~/Panel/UserList">Lista użytkowników</a>
                <a href="~/Panel/ConfirmUsers">Autoryzuj</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Zdarzenia</button>
            <div class="dropdown-content">
                <a href="~/Panel/ManageEvents">Kalendarz</a>
                <a href="~/Panel/EventsList">Lista zdarzeń</a>
            </div>
        </div>
        <div class="dropdown">
            <button class="dropbtn">Forum</button>
            <div class="dropdown-content">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
            </div>
        </div>
    </div>

    <div class="form-horizontal" style="margin-left:400px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id, new { @id = "id" })
        <div class="form-group">
            <label class="col-md-2 control-label">Wybór użytkownika</label>
            <div class="col-md-10">
                <select id="user_select" name="LastNam" onchange="show()">
                    <option value="0">--Wybierz uzytkownka--</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class=" = col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @id = "nazwisko", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class=" = col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @id = "imie", @readonly = "true" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class=" = col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @id = "email", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CathedralName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CathedralName, new { @id = "cathedrals_select", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LockDate, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LockDate, "{0:yyyy-MM-dd}", new { @id = "lockdate" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zablokuj" class="btn btn-default" onclick="return confirm('Czy na pewno chcesz zablokować tego użytkownika?')" />
            </div>
        </div>
    </div>
}
